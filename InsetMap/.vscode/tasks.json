{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch:tsc",
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true
    },
    {
      "label": "Sass Compile",
      "type": "shell",
      "command": "sass src/styles/*.scss dist/styles/*.css",
      "group": "build"
    }
  ]
}
